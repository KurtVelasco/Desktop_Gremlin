<Window x:Class="Desktop_Gremlin.Gremlin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Gremlin"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" Width="455"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize" BorderThickness="0" BorderBrush="Black">
    <Grid  MouseRightButtonDown="SpriteImage_RightClick">
        <Image Name="SpriteImage"
           Width="236" Height="250"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           Canvas.Top="20"  Margin="105,5,0,0" RenderTransformOrigin="0.484,0.525" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseEnter="SpriteImage_MouseEnter"
            MouseLeave="SpriteImage_MouseLeave">
        </Image>
        <Border x:Name="LeftHotspot"
            Background="#01000000"
            HorizontalAlignment="Left"
            Width="125"
            MouseLeftButtonDown="LeftHotspot_Click" Margin="105,255,0,0"/>

        <!-- Invisible right click zone -->
        <Border x:Name="RightHotspot"
            Background="#01000000"
            HorizontalAlignment="Left"
            Width="115"
            MouseLeftButtonDown="RightHotspot_Click" Margin="230,255,0,0"/>

    </Grid>

</Window>



