<Window x:Class="Desktop_Gremlin.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Gremlin"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid Margin="10,10,20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Width -->
        <Label Content="Sprite Width:" Grid.Row="0"/>
        <TextBox x:Name="WidthBox" Grid.Row="0" Margin="120,0,0,0" Width="100"/>

        <!-- Height -->
        <Label Content="Sprite Height:" Grid.Row="1"/>
        <TextBox x:Name="HeightBox" Grid.Row="1" Margin="120,0,0,0" Width="100"/>

        <!-- Margin Left -->
        <Label Content="Margin Left (X):" Grid.Row="2"/>
        <TextBox x:Name="MarginLeftBox" Grid.Row="2" Margin="120,0,0,0" Width="100"/>

        <!-- Margin Top -->
        <Label Content="Margin Top (Y):" Grid.Row="3"/>
        <TextBox x:Name="MarginTopBox" Grid.Row="3" Margin="120,0,0,0" Width="100"/>

        <!-- Save Button -->
        <Button Content="Save" Grid.Row="4" HorizontalAlignment="Right" Width="80" Margin="0,190,0,0" Click="Save_Click" RenderTransformOrigin="0.438,-0.49" Height="30" VerticalAlignment="Top"/>
        <Button Content="Open" Grid.Row="4" HorizontalAlignment="Right" Width="80" Margin="0,190,90,0" Click="Open_Click" Height="30" VerticalAlignment="Top"/>
    </Grid>

</Window>
